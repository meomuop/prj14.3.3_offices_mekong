		document.getElementById('div_hdmua').style.height='550px';
		document.getElementById('hdmua_main_cont').style.height='550px';
		document.getElementById('hdmua_content_outsign').style.height='495px';
		document.getElementById('hdmua_content_insign').style.height='473px';
	}
}

function change_style_hdmua(obj){

	for(i=1;i<=11;i++){
		if(i==parseInt(obj)){
            if(document.getElementById('c_menu_hdmua_'+i) === null) {
                continue;
            }else {
                document.getElementById('c_menu_hdmua_' + i).style.borderLeft = '1px solid #99bbe8';
                document.getElementById('c_menu_hdmua_' + i).style.borderRight = '1px solid #99bbe8';
                document.getElementById('c_menu_hdmua_' + i).style.borderBottom = '1px solid #dfe8f6';
                document.getElementById('c_menu_hdmua_' + i).style.backgroundColor = '#dfe8f6';
                document.getElementById('c_menu_hdmua_' + i).style.height = '25px';
                document.getElementById('c_menu_hdmua_' + i).style.marginTop = '0px';
                //if(parseInt(obj)==10){
                  //  document.getElementById('c_menu_hdmua_3').style.borderRight = 'none';
                //}
            }
		}
		else{
            if(document.getElementById('c_menu_hdmua_'+i) === null) {
                continue;
            }else {
                if (i != 1) {
                    document.getElementById('c_menu_hdmua_' + i).style.borderLeft = 'none';
                }
                if (i == parseInt(obj) - 1) {
                    document.getElementById('c_menu_hdmua_' + i).style.borderRight = 'none';
                } else {
                    document.getElementById('c_menu_hdmua_' + i).style.borderRight = '1px solid #99bbe8';
                }
                document.getElementById('c_menu_hdmua_' + i).style.borderBottom = 'none';
                document.getElementById('c_menu_hdmua_' + i).style.backgroundColor = '#ccd8e7';
                document.getElementById('c_menu_hdmua_' + i).style.height = '20px';
                document.getElementById('c_menu_hdmua_' + i).style.marginTop = '4px';
            }
		}
	}
}
