		document.getElementById('div_cv_cat').style.width='50%';
		document.getElementById('div_cv_cat').style.height='550px';
		document.getElementById('cv_cat_main_cont').style.height='550px';
		document.getElementById('cv_cat_content_outsign').style.height='495px';
		document.getElementById('cv_cat_content_insign').style.height='473px';
	}
}
function change_style_cv_cat(obj){
	for(i=1;i<=3;i++){
		if(i==obj){
			document.getElementById('c_menu_cv_cat_'+i).style.borderLeft = '1px solid #99bbe8';
			document.getElementById('c_menu_cv_cat_'+i).style.borderRight = '1px solid #99bbe8';
			document.getElementById('c_menu_cv_cat_'+i).style.borderBottom = '1px solid #dfe8f6';
			document.getElementById('c_menu_cv_cat_'+i).style.backgroundColor = '#dfe8f6';
			document.getElementById('c_menu_cv_cat_'+i).style.height = '25px';
			document.getElementById('c_menu_cv_cat_'+i).style.marginTop = '0px';
		}
		else{
			if(i!=1){
				document.getElementById('c_menu_cv_cat_'+i).style.borderLeft = 'none';
			}
			if(i==obj-1){
				document.getElementById('c_menu_cv_cat_'+i).style.borderRight = 'none';
			}else{
				document.getElementById('c_menu_cv_cat_'+i).style.borderRight = '1px solid #99bbe8';
			}
			document.getElementById('c_menu_cv_cat_'+i).style.borderBottom = 'none';
			document.getElementById('c_menu_cv_cat_'+i).style.backgroundColor = '#ccd8e7';
			document.getElementById('c_menu_cv_cat_'+i).style.height = '20px';
			document.getElementById('c_menu_cv_cat_'+i).style.marginTop = '4px';
		}
	}
}
