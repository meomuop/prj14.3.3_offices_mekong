}
function max_size_cv_cat(){
	if(document.getElementById('div_cv_cat').style.width=='50%'){
		document.getElementById('div_cv_cat').style.margin='0';
		document.getElementById('div_cv_cat').style.width='98%';
		document.getElementById('div_cv_cat').style.height='600px';
